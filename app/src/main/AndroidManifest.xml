    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeLink">
        <activity android:name=".NotificationsActivity"></activity>
        <activity android:name=".CreateGroupActivity" />
        <activity android:name=".TheirProfileActivity" />
        <activity android:name=".ProfileSkillPage" />
        <activity android:name=".PostDetailsActivity" />
        <activity android:name=".PostLikedByActivity" />
        <activity android:name=".EditProfilePage" />
        <activity android:name=".SkillPage" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>