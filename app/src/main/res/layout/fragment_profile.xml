<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:orientation="vertical"
    android:background="@drawable/background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatartv"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_above="@+id/profile_skill"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="222dp"
            android:layout_marginBottom="228dp"
            android:padding="2dp"
            android:src="@drawable/ic_users_light"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/profile_skill"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="140dp"
            android:fontFamily="@font/montserrat"
            android:includeFontPadding="false"
            android:paddingTop="40dp"
            android:text="Dummy User"
            android:textAlignment="center"
            android:textColor="#B0FFFFFF"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/emailtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/profile_skill"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/opensansitalic"
            android:includeFontPadding="false"
            android:text="dummy@user.mail"
            android:textAlignment="center"
            android:textColor="#B0FFFFFF"
            android:textSize="18dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_skill"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fab"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/buttonborder"
            android:backgroundTint="@color/buttonDefault"
            android:fontFamily="@font/montserrat"
            android:text="@string/skills"
            android:textColor="#B0000000"
            android:textSize="17sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="6dp"
            android:src="@drawable/ic_edit_white"
            app:backgroundTint="@color/buttonDefault"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>






</LinearLayout>